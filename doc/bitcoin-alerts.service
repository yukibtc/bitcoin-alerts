[Unit]
Description=Bitcoin Alerts

[Service]
ExecStart=/opt/bitcoin-alerts/target/release/bitcoin-alerts
User=<yourusername>
Type=simple
KillMode=process
Restart=always
RestartSec=60
Environment="RUST_BACKTRACE=1"

# Hardening measures
PrivateTmp=true
ProtectSystem=full
NoNewPrivileges=true
MemoryDenyWriteExecute=true

[Install]
WantedBy=multi-user.target